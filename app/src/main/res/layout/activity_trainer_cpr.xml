<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainerCPR">

    <RelativeLayout
        android:id="@+id/CPRlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:visibility="visible">

        <TextView
            android:id="@+id/CPRtextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Restart the motion when the background turns GREEN"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="35sp"
            android:textAllCaps="true"
            android:paddingHorizontal="10dp"/>

        <ImageButton
            android:id="@+id/backFromCPRimageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:translationX="-170dp"
            android:translationY="320dp"
            android:onClick="backFromCPR"
            android:src="@drawable/backbutton"
            android:background="@null"
            />

    </RelativeLayout>

</RelativeLayout>